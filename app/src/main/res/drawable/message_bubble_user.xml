<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set rounded corners -->
    <corners android:radius="16dp" />

    <!-- Background color for the user message -->
    <solid android:color="@color/user_message_background" />

    <!-- Optional: Add padding inside the bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
