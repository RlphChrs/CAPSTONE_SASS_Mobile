<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProfileSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="ProfileButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/lightBlue</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DayOfWeekStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="NavigationMenuItemStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regulars</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>