<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:fontFamily="@font/poppins_regulars">

            <TextView
                android:id="@+id/title_pick_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_date_time"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>



            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/title_choose_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_time"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <!-- ðŸ• TIME PICKER REPLACED START -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="8dp">

                <!-- FROM Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

                <!-- FROM Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock_logo"
                        android:contentDescription="@null" />

                    <Spinner
                        android:id="@+id/fromHourSpinner"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:id="@+id/fromHourLabel"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="--"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/fromMinuteStatic"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="00"
                        android:textSize="16sp"
                        android:background="@null"
                        android:textColor="@android:color/black"
                        android:padding="8dp"/>


                    <RadioGroup
                        android:id="@+id/toggleAmPm_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/buttonAM_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/am"
                            android:textColor="@color/white"
                            android:background="@drawable/login_signin"
                            android:button="@null"
                            android:padding="12dp"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/buttonPM_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pm"
                            android:textColor="@color/black"
                            android:background="@drawable/white_bg"
                            android:button="@null"
                            android:padding="12dp"
                            android:textSize="12sp" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

                <!-- TO Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock_logo"
                        android:contentDescription="@null" />

                    <Spinner
                        android:id="@+id/toHourSpinner"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:id="@+id/toHourLabel"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="--"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/toMinuteStatic"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="00"
                        android:textSize="16sp"
                        android:background="@null"
                        android:textColor="@android:color/black"
                        android:padding="8dp"/>


                    <RadioGroup
                        android:id="@+id/toggleAmPm_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/buttonAM_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/am"
                            android:textColor="@color/white"
                            android:background="@drawable/login_signin"
                            android:button="@null"
                            android:padding="12dp"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/buttonPM_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pm"
                            android:textColor="@color/black"
                            android:background="@drawable/white_bg"
                            android:button="@null"
                            android:padding="12dp"
                            android:textSize="12sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <!-- ðŸ• TIME PICKER REPLACED END -->

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_confirm_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Selection"
                android:background="@drawable/login_signin"
                android:backgroundTint="@color/darkBlue"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
