<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Report"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_toggle"
            android:contentDescription="@string/menu_icon" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/profile_picture"
            android:padding="4dp"
            android:src="@drawable/profile_image" />
    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/instruction_text"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"/>

    <!-- Checkbox (I Understand) -->
    <CheckBox
        android:id="@+id/checkboxUnderstand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_understand"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/instructionText"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"/>

    <!-- Name Input -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_name_hint"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/checkboxUnderstand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ID Number Input -->
    <EditText
        android:id="@+id/inputIdNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_id_hint"
        android:inputType="number"
        android:autofillHints="username"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Reason Input -->
    <EditText
        android:id="@+id/inputReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_reason_hint"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputIdNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description Input -->
    <EditText
        android:id="@+id/inputDescription"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="@string/input_description_hint"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:color/white"
        android:padding="12dp"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/inputReason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Confirmation Checkbox -->
    <CheckBox
        android:id="@+id/checkboxConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_confirm"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/inputDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"/>

    <!-- Done Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_done"
        android:textAllCaps="false"
        android:backgroundTint="@color/darkBlue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/checkboxConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
