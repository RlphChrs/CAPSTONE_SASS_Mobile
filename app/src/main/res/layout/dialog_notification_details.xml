<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/dialog_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject Here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FROM: SAO Admin"
        android:textStyle="bold"
        android:textColor="#444444"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/dialog_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TYPE: Report"
        android:textStyle="bold"
        android:textColor="#444444"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/dialog_message_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MESSAGE"
        android:textStyle="bold"
        android:textColor="#444444"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/message_box_background"
        android:padding="12dp"
        android:text="Message here"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="6dp" />

    <Button
        android:id="@+id/dialog_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:backgroundTint="#0B0D21"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rounded_button" />
</LinearLayout>
