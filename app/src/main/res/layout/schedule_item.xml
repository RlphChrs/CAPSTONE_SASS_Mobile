<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/schedule_rounded_card">

    <!-- Time Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_start"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_end"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Details Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:background="@drawable/schedule_rounded_inner"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/schedule_circle_blue"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/txtMeetingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting_title"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMeetingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meeting_time"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>
</LinearLayout>
