<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_regulars"
    android:padding="8dp">

    <!-- Bot Image -->
    <ImageView
        android:id="@+id/bot_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/sass_bot"
        android:contentDescription="@string/bot_icon"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"/> <!-- Increased space here -->

    <!-- Message Text -->
    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_bot"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="@string/bot_message"
        app:layout_constraintStart_toEndOf="@id/bot_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"/> <!-- Added margin here for extra spacing -->

</androidx.constraintlayout.widget.ConstraintLayout>
