<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Selection"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Policy Reminder -->
    <TextView
        android:id="@+id/dialog_policy_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check everything before booking, Cancellation of bookings is Strictly Prohibited after submitting due to school policy"
        android:textColor="#D32F2F"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Description Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Description Field -->
    <TextView
        android:id="@+id/tv_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        android:padding="12dp"
        android:textColor="#000000"
        android:text="I want to talk to the chairman"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Date Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date and Time"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Date Field -->
    <TextView
        android:id="@+id/tv_dialog_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        android:padding="12dp"
        android:text="Date here"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Book Button -->
    <Button
        android:id="@+id/btn_dialog_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:textAllCaps="true"
        android:backgroundTint="#0A1B3D"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_signin" />

</LinearLayout>
