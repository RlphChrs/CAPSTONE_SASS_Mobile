<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneratereportFragment">

    <!-- Toolbar with Menu Icon and Profile Picture -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Menu Icon on the left -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_toggle"
            android:contentDescription="@string/menu_icon1" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="300dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/profile_picture"
            android:padding="4dp"
            android:src="@drawable/profile_image" />
    </LinearLayout>

    <!-- Chat Message Section -->

    <LinearLayout
        android:id="@+id/chat_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- User Message -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:contentDescription="@string/user_profile"
                android:src="@drawable/user_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:text="@string/i_want_to_report_someone"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- Form Layout -->


    <!-- Response Layout -->

    <LinearLayout
        android:id="@+id/report_form"
        android:layout_width="417dp"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_section"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextSizeCheck,VisualLintBounds">

        <!-- Chat Section at the Top -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:contentDescription="@string/sass_bot"
                android:src="@drawable/sass_bot" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    android:text="@string/sure_i_m_happy_to_help_you_with_that"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:text="@string/just_please_fill_up_this_form"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reason Input Field -->
        <EditText
            android:id="@+id/input_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/reason"
            android:padding="10dp"
            tools:ignore="Autofill,TextContrastCheck,TextFields,TouchTargetSizeCheck" />

        <!-- Name of Offender Input Field -->
        <EditText
            android:id="@+id/input_offender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background"
            android:hint="@string/name_of_offender"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="Autofill,TextContrastCheck,TextFields" />

        <!-- Description of Action Input Field -->
        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/input_background"
            android:hint="Description of action"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="Autofill,HardcodedText,TextFields,TextContrastCheck" />

        <!-- Date Input Field -->
        <EditText
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_background"
            android:hint="@string/when_did_this_happen"
            android:padding="10dp"
            tools:ignore="Autofill,TextFields,TextContrastCheck,TouchTargetSizeCheck" />

        <!-- Submit Button -->
        <ImageButton
            android:id="@+id/submit_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/send_background"
            android:contentDescription="@string/submit_report"
            android:src="@drawable/ic_send" />

        <!-- Icons at the Bottom -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- First Icon -->
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_copy"
                tools:ignore="ContentDescription" />

            <!-- Second Icon -->
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_autorenew"
                tools:ignore="ContentDescription" />

            <!-- Third Icon -->
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumbdown"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:text="@string/fill_up_the_form_and_submit_after_filling_up_hope_you_have_a_good_day"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- response -->
    <LinearLayout
        android:id="@+id/chatbot_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/report_form"
        app:layout_constraintVertical_bias="0.136">
        <!-- SASS Bot Response -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:contentDescription="@string/sass_bot1"
                android:src="@drawable/sass_bot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="@string/report_successfully_filed"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- First Icon -->
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_copy"
                tools:ignore="ContentDescription" />

            <!-- Second Icon -->
            <ImageView
                android:id="@+id/icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_autorenew"
                tools:ignore="ContentDescription" />

            <!-- Third Icon -->
            <ImageView
                android:id="@+id/icon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumbdown"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_input_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/message_input_background"
            android:hint="@string/send_a_message"
            android:padding="12dp"
            android:textColor="@android:color/black"
            tools:ignore="Autofill,TextFields,VisualLintTextFieldSize" />

        <ImageButton
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send_message_icon"
            android:contentDescription="@string/send_button"
            tools:ignore="RedundantDescriptionCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
